extends layout

block css
    link(rel='stylesheet', href='/css/login.css')

block content
    div(class='container')
        div(class='row')
            div(class='col-sm-6 col-md-4 col-md-offset-4')
                h1(class='text-center login-title') Sign in to continue.
                div(class='account-wall')
                    img(class='profile-img' src='/img/photo.jpg' alt='')
                    form(class='form-signin' method='POST' action='users/login')
                        input(type='text' class='form-control' placeholder='Username' name='username' required autofocus)
                        input(type='password' class='form-control' placeholder='Password' name='password' required)
                        button(class='btn btn-lg btn-primary btn-block' type='submit') Sign in
                        if message.length > 0
                            strong= message
                        label(class='checkbox pull-left login-checkbox-fix')
                            input(type='checkbox' value='remember-me')
                            | Remember me
                        a(href='#' class='pull-right need-help') Need help?
                        span(class='clearfix')
                a(href='/users/signup' class='text-center new-account') Create an account
